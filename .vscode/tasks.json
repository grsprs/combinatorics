{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Tests with Coverage",
      "type": "shell",
      "command": "go test -coverprofile=coverage.out ./...",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Run Linter",
      "type": "shell",
      "command": "golangci-lint run",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Run Security Scan",
      "type": "shell",
      "command": "gosec ./...",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Build CLI",
      "type": "shell",
      "command": "go build -o ${workspaceFolderBasename}.exe ./cmd/${workspaceFolderBasename}",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
